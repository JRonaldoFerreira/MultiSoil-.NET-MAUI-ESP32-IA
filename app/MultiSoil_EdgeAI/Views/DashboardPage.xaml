<ContentPage x:Class="MultiSoil_EdgeAI.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:beh="clr-namespace:MultiSoil_EdgeAI.Behaviors"
             Title="Dashboard">

    <ContentPage.Behaviors>
        <beh:AuthGuardBehavior/>
    </ContentPage.Behaviors>

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Dashboard" FontSize="24" FontAttributes="Bold"/>

        <Button Text="Estou ativo (renovar sessão)"
                Command="{Binding KeepAliveCommand}" />

        <Frame Padding="12" BorderColor="{DynamicResource SecondaryColor}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Talhão selecionado:" FontAttributes="Bold"/>
                <Label Text="{Binding SelectedTalhaoTitle}" />
                <HorizontalStackLayout Spacing="8">
                    <Button Text="Selecionar Talhão"
                            Command="{Binding SelectTalhaoCommand}" />
                    <Button Text="Ver dados em tempo real"
                            Command="{Binding RealtimeCommand}"
                            IsEnabled="{Binding IsRealtimeEnabled}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <Button Text="Logout" Command="{Binding LogoutCommand}" />
    </VerticalStackLayout>
</ContentPage>
