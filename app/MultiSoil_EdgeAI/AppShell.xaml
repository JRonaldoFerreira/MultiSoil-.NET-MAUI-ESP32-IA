<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MultiSoil_EdgeAI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MultiSoil_EdgeAI.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- ROTA APENAS PARA LOGIN (primeira tela ao abrir via navegação) -->
    <ShellContent Route="login"
                  ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- ÁREA LOGADA (tabs) -->
    <TabBar Route="main">
        <ShellContent Title="Dashboard" Route="dashboard"
                      ContentTemplate="{DataTemplate views:DashboardPage}" />
    </TabBar>
</Shell>
